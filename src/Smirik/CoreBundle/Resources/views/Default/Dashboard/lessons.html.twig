{% for lesson in lessons %}
    {% if loop.index0 is divisibleby(2) or loop.index == 1 %}
        <div class="row-fluid">
    {% endif %}

    <div class="span6">
        <blockquote><h4><a href="{{ path('lesson_index', {"id": lesson.id }) }}" class="blue">
                {{ lesson.title }}
            </a>
        </h4>
        <small>{{ lesson.course.title }}</small>
        </blockquote>
    </div>

    {% if loop.index is divisibleby(2) or loop.last %}
        </div>
    {% endif %}
{% else %}
<p class="lead alert alert-success">{{ 'All lessons are completed'|trans }}!</p>
{% endfor %}
