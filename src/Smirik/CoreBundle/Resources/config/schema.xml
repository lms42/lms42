<database name="default" namespace="Smirik\CoreBundle\Model" defaultIdMethod="native">
    <table name="logs" phpName="Log" idMethod="native">
        <column name="id" type="INTEGER" primaryKey="true" autoIncrement="true" required="true"/>
        <column name="user_id" type="INTEGER" required="true"/>
        <column name="route" type="VARCHAR" size="100" required="true" />
        <column name="model_id" type="INTEGER" required="false"/>
        <column name="data" type="LONGVARCHAR" required="false"/>
        
        <foreign-key foreignTable="fos_user">
            <reference local="user_id" foreign="id"/>
        </foreign-key>
        <index name="route">
            <index-column name="route" />
        </index>
        <index name="created_at">
            <index-column name="created_at" />
        </index>
        <behavior name="timestampable"/>   
    </table>
</database>